{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ferrite Config",
  "scopeName": "source.ferrite-config",
  "patterns": [
    { "include": "#comments" },
    { "include": "#sections" },
    { "include": "#keys" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#arrays" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.hash.ferrite-config",
          "match": "#.*$"
        }
      ]
    },
    "sections": {
      "patterns": [
        {
          "name": "entity.name.section.ferrite-config",
          "match": "^\\s*\\[([a-zA-Z0-9_.-]+)\\]",
          "captures": {
            "1": { "name": "entity.name.section.ferrite-config" }
          }
        },
        {
          "name": "entity.name.section.array.ferrite-config",
          "match": "^\\s*\\[\\[([a-zA-Z0-9_.-]+)\\]\\]",
          "captures": {
            "1": { "name": "entity.name.section.array.ferrite-config" }
          }
        }
      ]
    },
    "keys": {
      "patterns": [
        {
          "name": "variable.other.key.ferrite-config",
          "match": "^\\s*([a-zA-Z0-9_-]+)\\s*=",
          "captures": {
            "1": { "name": "variable.other.key.ferrite-config" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.ferrite-config",
          "begin": "\"\"\"",
          "end": "\"\"\""
        },
        {
          "name": "string.quoted.double.ferrite-config",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ferrite-config",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.ferrite-config",
          "begin": "'",
          "end": "'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.ferrite-config",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.hex.ferrite-config",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.integer.octal.ferrite-config",
          "match": "\\b0o[0-7]+\\b"
        },
        {
          "name": "constant.numeric.integer.binary.ferrite-config",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.integer.ferrite-config",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.ferrite-config",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "arrays": {
      "patterns": [
        {
          "name": "meta.array.ferrite-config",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#booleans" }
          ]
        }
      ]
    }
  }
}
